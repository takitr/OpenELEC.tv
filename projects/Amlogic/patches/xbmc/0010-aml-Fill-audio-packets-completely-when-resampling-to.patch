Date: Sat, 20 Sep 2014 04:43:52 +0300
Subject: [PATCH 10/14] [aml] Fill audio packets completely when resampling to
 prevent 'audio data unaligned' kernel warnings

---
 .../Engines/ActiveAE/ActiveAEBuffer.cpp            |    4 ++++
 1 file changed, 4 insertions(+)

diff --git a/xbmc/cores/AudioEngine/Engines/ActiveAE/ActiveAEBuffer.cpp b/xbmc/cores/AudioEngine/Engines/ActiveAE/ActiveAEBuffer.cpp
index f2fd023..251596f 100644
--- a/xbmc/cores/AudioEngine/Engines/ActiveAE/ActiveAEBuffer.cpp
+++ b/xbmc/cores/AudioEngine/Engines/ActiveAE/ActiveAEBuffer.cpp
@@ -138,7 +138,11 @@ CActiveAEBufferPoolResample::CActiveAEBufferPoolResample(AEAudioFormat inputForm
   if (AE_IS_RAW(m_inputFormat.m_dataFormat))
     m_inputFormat.m_dataFormat = AE_FMT_S16NE;
   m_resampler = NULL;
+#ifdef HAS_LIBAMCODEC
+  m_fillPackets = true;
+#else
   m_fillPackets = false;
+#endif
   m_drain = false;
   m_empty = true;
   m_procSample = NULL;
